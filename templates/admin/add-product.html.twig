{% extends 'admin/base.html.twig' %}

{% block title %}Ajout nouveau produit!{% endblock %}

{% block body %}
    <h1 class="text-center">Ajouter un produit</h1>
{% include "./template-parts/general-notifs.html.twig" %}
 <div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
       {{ form_start(form, {'attr': {'id': 'form_produit'}}) }}
      <div class="form-group">
        {{ form_label(form.reference, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_errors(form.reference, {'attr': {'class': 'error-message'}}) }}
