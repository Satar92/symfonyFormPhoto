      </div>
      <div class="form-group">
        {{ form_label(form.couleur, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_errors(form.couleur, {'attr': {'class': 'error-message'}}) }}
        {{ form_widget(form.couleur, {'attr': {'class': 'form-control'}}) }}
      </div>
      <div class="form-group">
        {{ form_label(form.taille, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_errors(form.taille, {'attr': {'class': 'error-message'}}) }}
        {{ form_widget(form.taille, {'attr': {'class': 'form-control'}}) }}
      </div>
      <div class="form-group">
        {{ form_label(form.sexe, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_errors(form.sexe, {'attr': {'class': 'error-message'}}) }}
        {{ form_widget(form.sexe, {'attr': {'class': 'form-control'}}) }}
      </div>
      <div class="form-group">
        {{ form_label(form.photo, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_errors(form.photo, {'attr': {'class': 'error-message'}}) }}
        {{ form_widget(form.photo, {'attr': {'class': 'form-control'}}) }}
      </div>
      <div class="form-group">
        {{ form_label(form.prix, null, {'label_attr': {'class': 'form-label'}}) }}
